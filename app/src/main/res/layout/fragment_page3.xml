<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/common_title_layout_fm"></include>

    <com.boju.daqingcourt.widget.headerpager.HeaderViewPager
        android:id="@+id/scrollableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:hvp_topOffset="0dp">

        <FrameLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_banner3"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            android:orientation="vertical">

        </LinearLayout>


        <com.boju.daqingcourt.widget.NoScrollViewPager
            android:id="@+id/vp_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"></com.boju.daqingcourt.widget.NoScrollViewPager>
    </com.boju.daqingcourt.widget.headerpager.HeaderViewPager>

</LinearLayout>
