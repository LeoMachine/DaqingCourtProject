<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemColorAccent" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <!-- 横向分割 -->
    <style name="h_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/lightgray</item>
    </style>

    <!-- 自定义时间选择Dialog-->
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    <!-- 启动页 -->
    <style name="AppStart" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- 自定义Dialog-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        //Dialog的windowFrame框为无
        <item name="android:windowIsFloating">true</item>
        //是否浮现在activity之上
        <item name="android:windowIsTranslucent">true</item>
        //是否半透明
        <item name="android:windowNoTitle">true</item>
        //是否显示title
        <item name="android:background">@color/translucent</item>
        //设置dialog的背景
        <item name="android:windowBackground">@color/translucent</item>
        <!--<item name="android:backgroundDimAmount">0.7</item>  //就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>
    <!-- 自定义城市选择Dialog-->
    <style name="CityPickerAnim">
        <item name="android:windowEnterAnimation">@anim/bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_slide_out</item>
    </style>
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>  //Dialog的windowFrame框为无
        <item name="android:windowIsFloating">true</item>  //是否浮现在activity之上
        <item name="android:windowIsTranslucent">false</item> //是否半透明
        <item name="android:windowNoTitle">true</item>  //是否显示title
        <item name="android:background">@color/translucent</item>  //设置dialog的背景
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:backgroundDimAmount">0.7</item>  //就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/CityPickerAnim</item>
    </style>
</resources>
